{
  "name": "wndrs-nuxt-template",
  "version": "1.0.0",
  "description": "This is template for Nuxt.js project in WONDROUS LLC.",
  "author": "WONDROUS LLC <hello@wondrous.ch> (https://www.wearewondrous.ch)",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate && yarn functions:build",
    "functions:serve": "netlify-lambda serve functions",
    "functions:build": "netlify-lambda build functions",
    "lint:vue": "eslint **/*.vue",
    "lint:scss": "stylelint **/**/*.vue **/**/*.scss",
    "lint": "yarn lint:scss & yarn lint:vue",
    "test:unit": "jest --passWithNoTests",
    "test:unit:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --no-cache --runInBand",
    "test": "yarn lint && yarn test:unit",
    "precommit": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@nuxtjs/dotenv": "1.3.0",
    "@nuxtjs/style-resources": "0.1.2",
    "firebase": "^5.9.0",
    "nuxt": "2.4.5",
    "spotify-web-api-js": "^1.2.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-eslint": "10.0.1",
    "babel-jest": "^24.5.0",
    "eslint": "5.13.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-vue": "4.7.1",
    "husky": "1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "8.1.3",
    "netlify-lambda": "^1.4.3",
    "node-sass": "4.11.0",
    "nodemon": "1.18.9",
    "postcss-normalize": "7.0.1",
    "prettier": "1.14.3",
    "prettier-eslint": "8.8.2",
    "prettier-stylelint": "0.4.2",
    "sass-loader": "7.1.0",
    "stylelint": "9.10.1",
    "stylelint-a11y": "1.1.10",
    "stylelint-config-sass-guidelines": "5.3.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-declaration-block-no-ignored-properties": "1.1.0",
    "stylelint-order": "2.0.0",
    "stylelint-scss": "3.5.2",
    "vue-jest": "^3.0.4",
    "vue-svg-loader": "0.11.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE 11"
  ]
}
